package message;

public class Message {
	private MessageType type;
	private String body;
	
	public message(MessageType type) {
		this.type = type;
	}
	
	// Message type and other IE will go in the message in the future.
	public byte[] marshal() {
		byte[] message = this.getBody().getBytes();
		if(message.length > this.type.getMaxSize()) {
			//Add logger error here
			return null;
		}
		//Message converted in bytes
		else return message;
	}
	
	// Message type and other IE will go in the message in the future.
	public message unmarshal(byte[] messageStream) {
		String message = messageStream.toString();
		this.body = message;
		return message;
	}

	public String getBody() {
		return body;
	}

	public void setBody(String body) {
		this.body = body;
	}
}
